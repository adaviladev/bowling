{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "lint": "tslint -p tsconfig.json",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "test": "nyc mocha-webpack --webpack-config=node_modules/laravel-mix/setup/webpack.config.js --require tests/Vue/setup.js tests/Vue/**/*.spec.js",
        "watch": "npm run development -- --watch",
        "watch-poll": "npm run watch -- --watch-poll"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@vue/server-test-utils": "^1.0.0-beta.29",
        "@vue/test-utils": "^1.0.0-beta.29",
        "axios": "^0.18",
        "babel-loader": "^8.0.5",
        "bootstrap": "^4.0.0",
        "cross-env": "^5.1",
        "css-loader": "^2.1.0",
        "expect": "^23.6.0",
        "jquery": "^3.2",
        "jsdom": "^13.1.0",
        "jsdom-global": "^3.0.2",
        "laravel-mix": "^4.0.12",
        "lodash": "^4.17.4",
        "mocha": "^5.2.0",
        "mocha-webpack": "^2.0.0-beta.0",
        "moxios": "^0.4.0",
        "nyc": "^13.3.0",
        "popper.js": "^1.14.7",
        "prettier": "1.14.0",
        "resolve-url-loader": "2.3.2",
        "sass": "^1.15.2",
        "sass-loader": "7.*",
        "ts-loader": "^5.3.2",
        "tslint": "^5.12.0",
        "tslint-clean-code": "^0.2.9",
        "tslint-consistent-codestyle": "^1.14.1",
        "tslint-loader": "^3.5.4",
        "typescript": "^3.2.2",
        "vue": "^2.5.7",
        "vue-class-component": "^6.3.2",
        "vue-loader": "^15.6.4",
        "vue-property-decorator": "^7.3.0",
        "vue-router": "^3.0.2",
        "vue-server-renderer": "^2.6.7",
        "vue-template-compiler": "^2.5.21",
        "webpack": "^4.1.0",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "faker": "^4.1.0"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".vue"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "include": [
            "resources/assets/js/**/*.{ts|vue}"
        ],
        "instrument": false,
        "sourceMap": false,
        "reporter": [
            "lcov",
            "html"
        ],
        "report-dir": "public/report/vue"
    }
}
